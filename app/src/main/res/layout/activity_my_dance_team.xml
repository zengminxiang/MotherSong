<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bages"
    tools:context="com.fanstech.mothersong.DanceTeam.MyDanceTeamActivity">

    <com.fanstech.mothersong.custom_view.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/my_dance_yes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:gravity="center">

                <com.fanstech.mothersong.custom_view.ImageViewUtil
                    android:id="@+id/dance_head"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/logo" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/bg_topbar">

                <TextView
                    android:id="@+id/my_dance_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="舞队名："
                    android:textColor="@color/bg_black" />

                <TextView
                    android:id="@+id/dance_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/my_dance_text1"
                    android:background="@null"
                    android:gravity="center"
                    android:text="番薯战队" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/bg_topbar">

                <TextView
                    android:id="@+id/my_dance_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="主    场："
                    android:textColor="@color/bg_black" />

                <TextView
                    android:id="@+id/dance_squareName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/my_dance_text2"
                    android:background="@null"
                    android:gravity="center"
                    android:text="维尼国际广场" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/bg_topbar">

                <TextView
                    android:id="@+id/my_dance_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="管理员："
                    android:textColor="@color/bg_black" />

                <TextView
                    android:id="@+id/dance_createUserName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/my_dance_text3"
                    android:background="@null"
                    android:gravity="center"
                    android:text="胖胖祥" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/bg_topbar">

                <TextView
                    android:id="@+id/my_dance_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="人    数："
                    android:textColor="@color/bg_black" />

                <TextView
                    android:id="@+id/dance_memberCount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/my_dance_text4"
                    android:background="@null"
                    android:gravity="center"
                    android:text="5" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:background="@color/bg_topbar">

                <TextView
                    android:id="@+id/my_dance_text5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="视    频："
                    android:textColor="@color/bg_black" />

                <TextView
                    android:id="@+id/dance_video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/my_dance_text5"
                    android:background="@null"
                    android:gravity="center"
                    android:text="5个" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/bg_topbar">

                <TextView
                    android:id="@+id/my_dance_text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="简介："
                    android:textColor="@color/bg_black" />

                <TextView
                    android:id="@+id/dance_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/my_dance_text6"
                    android:background="@null"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="胖胖祥胖胖祥胖胖祥胖胖祥胖胖祥胖胖祥胖胖祥胖胖祥胖胖祥胖胖祥胖胖祥胖胖祥胖胖祥胖胖祥胖胖祥胖胖祥胖胖祥胖胖祥胖胖祥胖胖祥胖胖祥胖胖祥胖胖祥胖胖祥胖胖祥" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/dance_upd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonstyle_a"
                    android:text="上传视频" />

                <Button
                    android:id="@+id/dance_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonstyle_a"
                    android:text="管理成员" />

            </LinearLayout>
        </LinearLayout>

        </LinearLayout>
    </com.fanstech.mothersong.custom_view.MyScrollView>


    <LinearLayout
        android:id="@+id/my_dance_no"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/my_dance_join"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonstyle_a"
            android:text="加入舞队" />

        <Button
            android:id="@+id/my_dance_establish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonstyle_a"
            android:text="创建舞队" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dip"
        android:indeterminateDrawable="@drawable/animdraw2"
        android:indeterminateDuration="1500" />

</RelativeLayout>
