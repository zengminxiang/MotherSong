<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >

        <com.fanstech.mothersong.custom_view.ImageViewUtil
            android:id="@+id/video_comment_item_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/logo" />

        <TextView
            android:id="@+id/video_comment_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/video_comment_item_head"
            android:text="刘大妈"
            android:textColor="@color/bg_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/video_comment_item_comtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/video_comment_item_name"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/video_comment_item_head"
            android:text="一般般而已。。。。。。"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/video_comment_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="2016-02-27 12:30:06"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/video_comment_item_comtext"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:background="@color/bg_white"></View>
</LinearLayout>