<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/layout_background_a"
        >

        <com.fanstech.mothersong.custom_view.ImageViewUtil
            android:id="@+id/pk_dance_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/logo"
            />

        <TextView
            android:id="@+id/pk_dance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pk_dance_image"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/bg_black"
            android:text="番薯科技"
            />

        <TextView
            android:id="@+id/pk_dance_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pk_dance_image"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/pk_dance_title"
            android:text=""
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/pk_dance_image"
            >

            <Button
                android:id="@+id/pk_button"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:text="挑战"
                android:background="@drawable/buttonstyle_a"
                />
            <Button
                android:id="@+id/pk_delect"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="删除"
                android:layout_marginLeft="10dp"
                android:background="@drawable/buttonstyle_a"
                />

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>