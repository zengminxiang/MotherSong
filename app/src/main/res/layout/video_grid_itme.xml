<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#fee5dd"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="130dp">
        <ImageView
            android:id="@+id/videos_grid_item_image"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:scaleType="fitXY"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#fee5dd"
        >

        <TextView
            android:id="@+id/videos_grid_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/button_ow"
            android:text="小苹果"
            />

        <TextView
            android:id="@+id/videos_grid_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/bofang"
            android:layout_below="@+id/videos_grid_item_title"
            android:textSize="12sp"
            android:text="1.1万"
            />
        <TextView
            android:id="@+id/videos_grid_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/videos_grid_item_title"
            android:text="2016-06-29"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bage"
        ></View>

</LinearLayout>
