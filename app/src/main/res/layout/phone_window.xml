<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/phone_layout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/backgroundmap">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="请选择" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phone_layout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/phone_layout1"
        android:layout_centerHorizontal="true"
        android:background="@color/bages">

        <TextView
            android:id="@+id/album"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="相册" />
    </RelativeLayout>

    <View
        android:id="@+id/phone_layout3"
        android:layout_width="match_parent"
        android:layout_below="@+id/phone_layout2"
        android:background="@color/bg_white"
        android:layout_centerHorizontal="true"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/phone_layout4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/phone_layout3"
        android:layout_centerHorizontal="true"
        android:background="@color/bages">

        <TextView
            android:id="@+id/photograph"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="照相" />
    </RelativeLayout>


    <View
        android:id="@+id/phone_layout5"
        android:layout_width="match_parent"
        android:layout_below="@+id/phone_layout4"
        android:background="@color/bg_white"
        android:layout_centerHorizontal="true"
        android:layout_height="1dp"/>
</RelativeLayout>